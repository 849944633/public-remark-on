/* pages/nearby/nearby.wxss */
.box{
	width: 100%;
	box-sizing: border-box;
}
.header{
	width: 100%;
	height: 100rpx;
	border-bottom: 2rpx solid #F4F4F4;
	display: flex;
}
.header view{
	width: 50%;
	/* border: 1px solid red; */
	display: flex;
	justify-content: center;
	align-items: center;
	font-size: 30rpx;
	border-right: 4rpx solid #F4F4F4;
}
.header>view:nth-of-type(2){
	border: none;
}
.header view image{
	width: 30rpx;
	height: 30rpx;
}

.like{
	box-sizing: border-box;
	padding: 20rpx;
}
.like01{
	width: 100%;
	height: 250rpx;
	box-sizing: border-box;
	display: flex;
	font-size:6rpx;
	margin-top: 20rpx;
	border-bottom: 1rpx solid #F4F4F4;
}
.like01 image{
	width: 250rpx;
	height:220rpx;
}
.like-font{
	width: 100%;
	height: 100%;
	margin-left: 20rpx;
}
.like-font>view:nth-of-type(1){
	display: flex;
	justify-content: space-between;
	font-size: 35rpx;
	font-weight: 800;

}
.like-font>view:nth-of-type(1) text{
	font-size: 28rpx;
}
.like-font>view:nth-of-type(2){
	margin-top: 10rpx;
	width: 520rpx;
	font-size: 30rpx
}
.like-font>view:nth-of-type(2) image{
	width: 170rpx;
	height: 35rpx;
}
.like-font>view:nth-of-type(2) text{
	color: #000;
}
.like-font>view:nth-of-type(3){
	margin-top: 15rpx;
	display: flex;
	justify-content: space-between;
}
.like-font>view:nth-of-type(3)>text:nth-of-type(1){
	font-size: 30rpx;
}
.like-font>view:nth-of-type(3)>text:nth-of-type(1) text{
	color: #AAAAAA;
	font-size: 30rpx;
	margin-left: 10rpx;

}
.like-font>view:nth-of-type(3)>text:nth-of-type(2){
	color: #AAAAAA;
	margin-top: 10rpx;
}
.foot{
	width: 100%;
	box-sizing: border-box;
	height: 60rpx;
	/* border: 2rpx solid #AAAAAA; */
	color: #000;
}
.foot>text{
	display: inline-block;
	width: 120rpx;
	height:60rpx;
	text-align: center;
	line-height: 60rpx;
	border: 2rpx solid #AAAAAA;
	box-sizing: border-box;
	margin-right: 10rpx;
	color: #808080;
}