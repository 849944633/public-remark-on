/* pages/student/student.wxss */ 
.box{
	width: 100%;
	box-sizing: border-box;
}
.header{
	width: 100%;
	height: 100rpx;
	background: #181818;
	color: #E1B588;
	display: flex;
	box-sizing: border-box;
	justify-content: space-between;
	align-items: center;
	padding: 30rpx;
}
.header image:nth-of-type(1){
	width: 20rpx;
	height: 20rpx;
}
.header view:nth-of-type(2) image{
	width: 50rpx;
	height: 50rpx;
}

.body{
	width: 100%;
	height: 180rpx;
	border-bottom: 8px solid #F4F4F4;
	box-sizing: border-box;
	display: flex;
	margin-top: 20rpx;
	
}
.body view{
	width: 25%;
	height: 150rpx;
	/* border: 1px solid black;/ */
	display: flex;
	align-items: center;
	flex-direction: column;
}
.body text{
	margin-top: 20rpx;
	font-size: 30rpx;
}
.body view image{
	width: 90rpx;
	height: 90rpx;
}

.like{
	box-sizing: border-box;
	padding: 20rpx;
}
.like>text:nth-of-type(1){
	font-size: 35rpx;
	color: #AAAAAA;
}
.like01{
	width: 100%;
	height: 250rpx;
	box-sizing: border-box;
	display: flex;
	font-size: 26rpx;
	margin-top: 20rpx;
	border-bottom: 1rpx solid #F4F4F4;
}
.like01 image{
	width: 250rpx;
	height:220rpx;
}
.like-font{
	width: 100%;
	height: 100%;
	margin-left: 20rpx;
}
.like-font>view:nth-of-type(1){
	display: flex;
	justify-content: space-between;
	font-size: 35rpx;
	font-weight: 800;
}
.like-font>view:nth-of-type(1) text{
	font-size: 28rpx;
}
.like-font>view:nth-of-type(2){
	margin-top: 10rpx;
	width: 520rpx;
	font-size: 30rpx
}
.like-font>view:nth-of-type(2) image{
	width: 170rpx;
	height: 35rpx;
}
.like-font>view:nth-of-type(2) text{
	color: #000;
}
.like-font>view:nth-of-type(3){
	margin-top: 15rpx;
	display: flex;
	justify-content: space-between;
}
.like-font>view:nth-of-type(3)>text:nth-of-type(1){
	font-size: 30rpx;
}
.like-font>view:nth-of-type(3)>text:nth-of-type(1) text{
	color: #AAAAAA;
	font-size: 30rpx;
	margin-left: 10rpx;

}
.like-font>view:nth-of-type(3)>text:nth-of-type(2){
	color: #AAAAAA;
	margin-top: 10rpx;
}
.foot{
	width: 100%;
	box-sizing: border-box;
	height: 60rpx;
	/* border: 2rpx solid #AAAAAA; */
	color: #000;
}
.foot>text{
	display: inline-block;
	width: 120rpx;
	height:60rpx;
	text-align: center;
	line-height: 60rpx;
	border: 2rpx solid #AAAAAA;
	box-sizing: border-box;
	margin-right: 10rpx;
	color: #808080;
}