/* pages/public/public.wxss */
.box {
	width: 100%;
	height: 100%;
	box-sizing: border-box;
}

.header {
	width: 100%;
	/* border: 2rpx solid red; */
	height: 100rpx;
	box-sizing: border-box;
	display: flex;
	justify-content: space-between;
	align-items: center;
	font-size: 30rpx;
	padding: 15rpx;
}

.header image {
	width: 40rpx;
	height: 40rpx;
}

.header view:nth-of-type(2) input {
	background: #F4F4F4;
	width: 550rpx;
	border-radius: 50rpx;
	height: 80rpx;
	text-align: center;
}

.header view:nth-of-type(2) image {
	position: absolute;
	top: 30rpx;
	left: 170rpx;
}

.header view:nth-of-type(3) {
	display: flex;
	flex-direction: column;
	align-items: center;
}

.body {
	width: 100%;
	display: flex;
	box-sizing: border-box;
	flex-wrap: wrap;
	padding: 20rpx;
	margin-top: 20rpx;
	/* border: 1px solid red; */
}

.body view {
	width: 20%;
	box-sizing: border-box;
	height: 150rpx;
	/* border: 2rpx solid red; */
	display: flex;
	align-items: center;
	flex-direction: column;
}

.body view text {
	margin-top: 15rpx;

	font-size: 30rpx;
}

.body view image {
	width: 80rpx;
	height: 80rpx;

  font-size: 26rpx;
}

.body view image {
	width: 60rpx;
	height: 60rpx;

}

.body-1 {
	width: 100%;
	box-sizing: border-box;
	border: 2rox solid red;
	display: flex;
	padding: 20rpx;
}

.body-1 view:nth-of-type(1) {
	margin-right: 20rpx;
}

.body-1 view {
	width: 50%;
	height: 150rpx;
	border: 2rpx solid #F4F4F4;
	display: flex;
	justify-content: center;
	align-items: center;
	font-weight: bold;
	font-size: 35rpx;
}

.body-1 view text {
	margin-left: 10rpx;
}

.body-1 image {
	width: 70rpx;
	height: 70rpx;
}

.img {
	width: 100%;
	height: 200rpx;
	box-sizing: border-box;
	padding: 20rpx;
}

.img image {
	width: 100%;
	height: 100%;
}

.like{
	box-sizing: border-box;
	padding: 20rpx;
}
.like text:nth-of-type(1){
	font-size: 35rpx;
	color: #AAAAAA;
}
.like01{
	width: 100%;
	height: 250rpx;
	box-sizing: border-box;
	display: flex;
	font-size: 26rpx;
	margin-top: 20rpx;
	border-bottom: 1rpx solid #F4F4F4;
}
.like01 image{
	width: 250rpx;
	height:220rpx;
}
.like-font{
	width: 100%;
	height: 100%;
	margin-left: 20rpx;
}
.like-font view:nth-of-type(1){
	display: flex;
	justify-content: space-between;
	font-size: 35rpx;
	font-weight: 800;
}
.like-font view:nth-of-type(1) text{
	font-size: 28rpx;
}
.like-font view:nth-of-type(2){
	margin-top: 10rpx;
	width: 520rpx;
	color: #AAAAAA;
	overflow:hidden;
	display: -webkit-box;
	-webkit-box-orient:vertical;
	-webkit-line-clamp:2;
	
}
.like-font view:nth-of-type(3){
	margin-top: 15rpx;
	display: flex;
	justify-content: space-between;
}
.like-font view:nth-of-type(3) text:nth-of-type(1){
	color:#FF0000;
	font-size: 40rpx;
	font-weight: 700;
}
.like-font view:nth-of-type(3) text:nth-of-type(1) text{
	color: #AAAAAA;
	font-size: 30rpx;
	margin-left: 10rpx;
	font-weight: 300;
	text-decoration: line-through;

}
.like-font view:nth-of-type(3) text:nth-of-type(2){
	color: #AAAAAA;
	margin-top: 10rpx;
}